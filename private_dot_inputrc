set bell-style none

# for rxvt            
"\e[7~": beginning-of-line
"\e[8~": end-of-line

set editing-mode vi
$if mode=vi

set keymap vi-command
# these are for vi-command mode
Control-l: clear-screen
"gg": beginning-of-history
"G": end-of-history

set keymap vi-insert
# these are for vi-insert mode
Control-l: clear-screen
"jj": vi-movement-mode
Control-p: history-search-backward
$endif

